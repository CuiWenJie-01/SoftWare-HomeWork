<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.MyStudentMapper">
    
    <resultMap type="MyStudent" id="MyStudentResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="age"    column="age"    />
    </resultMap>

    <sql id="selectMyStudentVo">
        select id, name, age from my_student
    </sql>

    <select id="selectMyStudentList" parameterType="MyStudent" resultMap="MyStudentResult">
        <include refid="selectMyStudentVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="age != null "> and age = #{age}</if>
        </where>
    </select>
    
    <select id="selectMyStudentById" parameterType="Long" resultMap="MyStudentResult">
        <include refid="selectMyStudentVo"/>
        where id = #{id}
    </select>

    <insert id="insertMyStudent" parameterType="MyStudent">
        insert into my_student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="age != null">age,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="age != null">#{age},</if>
         </trim>
    </insert>

    <update id="updateMyStudent" parameterType="MyStudent">
        update my_student
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="age != null">age = #{age},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteMyStudentById" parameterType="Long">
        delete from my_student where id = #{id}
    </delete>

    <delete id="deleteMyStudentByIds" parameterType="String">
        delete from my_student where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>